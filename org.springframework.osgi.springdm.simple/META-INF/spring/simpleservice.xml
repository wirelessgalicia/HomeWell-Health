<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="consumidorWebResultadosRef" class="es.sergas.chuac.logos.modelo.gestorpruebas.vo.ConsumidorVistaVO"> 
		<property name="idServicio" value="logos.consumidor.resultados.vista.ventanas"/>
		<property name="descServicio" value="Consumidor de resultados para vista de ventanas"/>
		<property name="pollInterval" value="1000"/>
		<property name="sabores">
			<list>
				<value>es.sergas.chuac.logos.modelo.tramaprmsalida.vo.TramaProductorEnEjecucionVO</value>
			</list>
		</property>
	</bean>
	
	
	<bean id="consumidorWebEventosRef" class="es.sergas.chuac.logos.modelo.gestorpruebas.vo.ConsumidorVistaVO"> 
		<property name="idServicio" value="logos.consumidor.eventos.vista.ventanas"/>
		<property name="descServicio" value="Consumidor de eventos para vista de ventanas"/>
		<property name="pollInterval" value="1000"/>
		<property name="sabores">
			<list>
				<value>es.sergas.chuac.logos.modelo.evento.EventoRealizacionPrueba</value>
			</list>
		</property>
	</bean>
	
	<bean name="consumidorWebVistaServiceBean"
		class="com.wirelessgalicia.logos.vista.web.services.ConsumidorVistaImplService"
		init-method="start" destroy-method="stop">
		<property name="bundleContext" ref="bundleContext"/>
		<property name="consumidorResultadosVO" ref="consumidorWebResultadosRef"/>
		<property name="consumidorEventosVO" ref="consumidorWebEventosRef"/>
		<property name="wireAdminVistaResultadosService" ref="wireAdminVistaWebResultadosServiceOSGi"/>
		<property name="wireAdminVistaEventosService" ref="wireAdminVistaWebEventosServiceOSGi"/>
	</bean>

	<bean name="eventsStore"
        class="com.wirelessgalicia.logos.vista.web.almacen.AlmacenEventos" />

	<bean name="resultsStore"
        class="com.wirelessgalicia.logos.vista.web.almacen.AlmacenResultados" />

</beans>
