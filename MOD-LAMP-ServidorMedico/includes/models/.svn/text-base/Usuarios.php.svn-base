    public function modificar($cambios)
    {
        // {{{

        $this->nombre = $cambios['nombre'];
        $this->apellidos = $cambios['apellidos'];
        $this->usuario = $cambios['usuario'];

        $this->save();

        // }}}
    }

    public function nuevoNombreUsuarioCorrecto($usuario)
    {
        // {{{

        $q = Doctrine_Query::create()
            ->select('count(*)')
            ->from('Usuarios')
            ->where('usuario = ?', $usuario)
            ->addWhere('id <> ?', $this->id)
            ;

        $resultado = $q->fetchOne();

        if($resultado['count'] > 0){
            return false;
        } else {
            return true;
        }

        // }}}
    }

